{
    "compileOption": {
        "target": "ES6",
        "module": "CommonJS",
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "./path/to/your/declarations/*.d.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}